<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" prefHeight="465.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProgramFormController">
   <children>
      <Label layoutX="13.0" layoutY="20.0" text="Program Management" textFill="#273c75">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <Separator layoutX="13.0" layoutY="48.0" prefHeight="0.0" prefWidth="575.0" />
      <Button layoutX="493.0" layoutY="18.0" mnemonicParsing="false" onAction="#backHomeOnAction" style="-fx-background-color: rgba(48, 51, 107,1.0);" text="Back to home" textFill="#fffbfb">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="377.0" layoutY="18.0" mnemonicParsing="false" onAction="#newProgramOnAction" style="-fx-background-color: rgba(0, 151, 230,1.0);" text="+ New Program" textFill="#fffbfb">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="txtId" layoutX="16.0" layoutY="63.0" prefHeight="25.0" prefWidth="110.0" promptText="Program Code" />
      <TextField fx:id="txtName" layoutX="135.0" layoutY="63.0" prefHeight="25.0" prefWidth="143.0" promptText="Program Name" />
      <TextField fx:id="txtCost" layoutX="291.0" layoutY="63.0" prefHeight="25.0" prefWidth="143.0" promptText="Cost" />
      <TextField fx:id="txtSearch" layoutX="15.0" layoutY="254.0" prefHeight="25.0" prefWidth="417.0" promptText="Search here" />
      <Button layoutX="443.0" layoutY="255.0" mnemonicParsing="false" onAction="#saveOnAction" prefHeight="25.0" prefWidth="143.0" style="-fx-background-color: rgba(56, 103, 214,1.0);" text="Save Program" textFill="#fffbfb">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TableView fx:id="tblPrograms" layoutX="12.0" layoutY="290.0" prefHeight="164.0" prefWidth="575.0">
         <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="#ID" />
            <TableColumn fx:id="colName" prefWidth="93.0" text="Program" />
            <TableColumn fx:id="colTeacher" prefWidth="104.0" text="Teachers" />
            <TableColumn fx:id="colcolTechOption" prefWidth="122.0" text="Technologies" />
            <TableColumn fx:id="colCost" minWidth="0.0" prefWidth="85.0" text="Cost" />
            <TableColumn fx:id="colOption" minWidth="0.0" prefWidth="95.0" text="Options" />
         </columns>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TableView>
      <ComboBox fx:id="cmbTeacher" layoutX="441.0" layoutY="63.0" prefHeight="25.0" prefWidth="143.0" promptText="Teacher" />
      <TableView fx:id="tblTechnologies" layoutX="13.0" layoutY="132.0" prefHeight="113.0" prefWidth="575.0">
         <columns>
            <TableColumn fx:id="colTCode" prefWidth="75.0" text="#ID" />
            <TableColumn fx:id="colTNAme" prefWidth="383.0" text="Technology" />
            <TableColumn fx:id="colTRemove" minWidth="0.0" prefWidth="116.0" text="Remove" />
         </columns>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TableView>
      <TextField fx:id="txtTechnology" layoutX="15.0" layoutY="98.0" onAction="#addTechOnAction" prefHeight="25.0" prefWidth="264.0" promptText="Technology" />
   </children>
</AnchorPane>
