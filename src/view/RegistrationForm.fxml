<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" prefHeight="199.0" prefWidth="475.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistrationFormController">
    <children>
        <Label layoutX="12.0" layoutY="13.0" text="New Registration" textFill="#273c75">
            <font>
                <Font name="System Bold" size="19.0"/>
            </font>
        </Label>
        <Separator layoutX="12.0" layoutY="44.0" prefHeight="0.0" prefWidth="449.0"/>
        <Button layoutX="366.0" layoutY="11.0" mnemonicParsing="false" onAction="#backHomeOnAction"
                style="-fx-background-color: rgba(48, 51, 107,1.0);" text="Back to home" textFill="#fffbfb">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <TextField fx:id="txtId" layoutX="15.0" layoutY="56.0" prefHeight="25.0" prefWidth="110.0"
                   promptText="Registration id"/>
        <TextField fx:id="txtStudent" layoutX="135.0" layoutY="56.0" prefHeight="25.0" prefWidth="143.0"
                   promptText="Student (Search here)"/>
        <ComboBox fx:id="cmbProgram" layoutX="288.0" layoutY="56.0" prefHeight="25.0" prefWidth="174.0"
                  promptText="Program"/>
        <Button fx:id="btn" layoutX="316.0" layoutY="155.0" mnemonicParsing="false" onAction="#registerOnAction"
                prefHeight="25.0" prefWidth="143.0" style="-fx-background-color: rgba(56, 103, 214,1.0);"
                text="Register" textFill="#fffbfb">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Label layoutX="12.0" layoutY="97.0" text="Payment State" textFill="#273c75">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Label>
        <RadioButton fx:id="rBtnPaid" layoutX="14.0" layoutY="130.0" mnemonicParsing="false" selected="true"
                     text="Paid"/>
        <RadioButton fx:id="rBtnPending" layoutX="72.0" layoutY="130.0" mnemonicParsing="false" text="Pending"/>
    </children>
</AnchorPane>
