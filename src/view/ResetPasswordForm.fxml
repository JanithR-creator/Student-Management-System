<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" prefHeight="190.0" prefWidth="271.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResetPasswordFormController">
    <children>
        <Label layoutX="27.0" layoutY="31.0" text="Change Password" textFill="#273c75">
            <font>
                <Font name="System Bold" size="19.0"/>
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" layoutX="28.0" layoutY="88.0" prefHeight="25.0" prefWidth="224.0"
                       promptText="password"/>
        <Button layoutX="28.0" layoutY="127.0" mnemonicParsing="false" onAction="#changePasswordOnAction"
                prefHeight="36.0" prefWidth="224.0" style="-fx-background-color: rgba(56, 103, 214,1.0);" text="change"
                textFill="#fffbfb">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Separator layoutX="27.0" layoutY="61.0" prefHeight="3.0" prefWidth="224.0"/>
    </children>
</AnchorPane>
